<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "pirate_logo.png", height: 50 %>
  <% end %>

  <form action="/birds/search" method="get" class="nav-form">
    <input type="text" name="user_search">
    <input type="submit" value="search">
  </form>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right ">
<!-- add hidden-xs and hidden-sm -->
    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Rent a bird!", birds_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Post your bird!", new_bird, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Dashboard", users_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "https://www.popularpatch.com/blog/wp-content/uploads/2013/07/xJackSparrowQuote-543x400.jpg.pagespeed.ic.StHH-EIbTj.jpg", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>

          <%#= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %> <!--  -> replace with this when user photos are available. -->
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <%= link_to "Explore birds", birds_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Sign up", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>

  </div>

