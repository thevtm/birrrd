
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= asset_path 'banner.jpg' %>);">
  <div class="banner-content">
    <h1>World's best bird portal</h1>
    <p>A bird is a pirate's best mate</p>

    <%= link_to birds_path, class: "btn btn-primary btn-md" do %>
    <div> Gimme da birrrds! </div>
    <% end %>
  </div>
</div>
<section class="gallery-block gallery-front">
  <div class="container">
      <div class="row">
        <div class="title-value">
          <a>Our value proposition !</a>
        </div>
          <div class="col-md-4">
              <div class="gallery-image">
                <div class="overlay">
                    <a class="symbol"><i class="fas fa-spinner"></i>
                    </a>
                    <p><a>The most updated database</a></p>
                </div>
              </div>
          </div>
          <div class="col-md-4">
              <div class="gallery-image">
                  <div class="overlay">
                      <a class="symbol"><i class="fa fa-search" aria-hidden="true"></i></a>
                      <p><a>Easy search functionnalities</a></p>
                  </div>
              </div>
          </div>
          <div class="col-md-4">
            <div class="gallery-image">
              <div class="overlay">
                  <a class="symbol"><i class="fas fa-globe"></i></a>
                  <p><a>Rent bird from all over the world</a></p>
              </div>
            </div>
          </div>
      </div>
  </div>

<div class="container">
  <div class="row">
    <% @birds.each do |bird| %>
      <%= render partial: 'shared/bird-card', locals: {bird: bird} %>
    <% end %>
  </div>
</div>













